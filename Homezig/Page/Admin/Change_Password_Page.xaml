<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			x:Class="Homezig.Change_Password_Page">


	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	                iOS="20, 20, 20, 20"
	                Android="20, 0, 20, 20"
	                WinPhone="20, 0, 20, 20" />
  	</ContentPage.Padding>

  	<ContentPage.Content>

		<StackLayout Spacing="10">					

			<Label Text="New Password"
					FontSize="Medium"/>

			<Entry x:Name="newPassword"				
					Text=""/>			

			<Button Text="Submit"
					BorderWidth="1"
					Clicked="OnSubmit_Clicked"/>

			<Button Text="Cancel"
					BorderWidth="1"
					Clicked="OnCancel_Clicked"/>

			
		</StackLayout>

	</ContentPage.Content>

</ContentPage>
