<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
				x:Class="Homezig.LoginPage"
				Title="Login Page"
             	
             	>
	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	                iOS="20, 20, 20, 20"
	                Android="10, 0, 10, 20"
	                WinPhone="10, 0, 10, 20" />
  	</ContentPage.Padding>


	<StackLayout VerticalOptions="Center">

		<Button Text="test chart" Clicked="OnChart" />

		<Label Text="Server Url"
				FontSize="Medium"/>

		<Entry x:Name="webSocketUrl"
				Placeholder="Example: ws://echo.websocket.org"
				Text="ws://hz.homezig.net"/>

		<Label Text="Username"
				FontSize="Medium"/>

		<Entry x:Name="username" Text="admin"				
				/>

		<Label Text="Password"
				FontSize="Medium"/>

		<Entry x:Name="password"				
				IsPassword="true" Text="b9cb39"/>

		<Button Text="Login"
				BorderWidth="1"
				Clicked="OnLogin_Clicked"/>

		<Button Text="Logout"
				BorderWidth="1"
				Clicked="OnLogout_Clicked"/>
	</StackLayout>

</ContentPage>
